<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:clipToOutline="true"
        android:background="@drawable/image"
        android:elevation="40dp"
        tools:ignore="MissingConstraints">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/unsplash_fc"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:elevation="20dp"
            app:srcCompat="@drawable/cho_thue_phong_tro_thu_duc_3"
            app:shapeAppearanceOverlay="@style/RoundedSquare"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/frame_166"
        android:layout_width="320dp"
        android:layout_height="125dp"
        android:layout_marginTop="210dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/txtinn_price"
            android:layout_width="320dp"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:lineSpacingExtra="-1sp"
            android:text="@string/inn_price"
            android:textAppearance="@style/inn_price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtcontent"
            android:layout_width="314dp"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:text="@string/content_inn"
            android:textAppearance="@style/content_inn" />

    </RelativeLayout>

</RelativeLayout>