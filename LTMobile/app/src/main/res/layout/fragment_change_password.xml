<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.ChangePasswordFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/screen_padding">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="38dp"
            android:textStyle="bold"
            android:textColor="#333"
            android:layout_marginBottom="24dp"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/default_padding"
            app:hintTextColor="@color/primary_color"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/primary_color"
            style="@style/LoginTextInputLayoutStyle"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            >
            <EditText
                android:id="@+id/inputOldPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Mật khẩu cũ"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/default_padding"
            app:hintTextColor="@color/primary_color"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/primary_color"
            style="@style/LoginTextInputLayoutStyle"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            >
            <EditText
                android:id="@+id/inputNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Mật khẩu mới"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputNewPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/default_padding"
            app:hintTextColor="@color/primary_color"
            app:boxBackgroundColor="@color/white"
            app:boxStrokeColor="@color/primary_color"
            style="@style/LoginTextInputLayoutStyle"
            app:passwordToggleEnabled="true"
            app:errorEnabled="true"
            app:errorIconDrawable="@null"
            >
            <EditText
                android:id="@+id/inputNewPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:hint="Nhập lại mật khẩu"
                android:textSize="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginVertical="@dimen/default_padding"
            android:text="Xác nhận"
            android:textSize="20dp"
            android:backgroundTint="@color/primary_color"
            />
    </LinearLayout>
</FrameLayout>