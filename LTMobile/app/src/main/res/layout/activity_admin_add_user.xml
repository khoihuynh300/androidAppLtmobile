<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screen_padding"
    tools:context=".Activity.AdminAddUserActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm người dùng"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="#333"
        android:layout_marginBottom="10dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputFname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputFname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Họ và Tên"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:focusableInTouchMode="false"
            android:hint="Giới tính"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="none"
            android:focusableInTouchMode="false"
            android:hint="Role"
            android:textSize="20dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:passwordToggleEnabled="true"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Mật khẩu"
            android:textSize="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginVertical="4dp"
        app:hintTextColor="@color/primary_color"
        app:boxBackgroundColor="@color/white"
        app:boxStrokeColor="@color/primary_color"
        style="@style/LoginTextInputLayoutStyle"
        app:passwordToggleEnabled="true"
        app:errorEnabled="true"
        app:errorIconDrawable="@null"
        >
        <EditText
            android:id="@+id/inputPassword2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="Nhập lại mật khẩu"
            android:textSize="20dp"/>
    </com.google.android.material.textfield.TextInputLayout>




    <Button
        android:id="@+id/btnAddUser"
        android:layout_width="match_parent"
        android:layout_height="72dp"

        android:layout_marginVertical="4dp"
        android:text="Thêm người dùng"
        android:textSize="20dp"
        android:backgroundTint="@color/primary_color"
        />
</LinearLayout>